# Nginx configuration for Code Quality Agent
# Place this in your main nginx config or include it

location /code-quality-agent {
    # Remove the prefix when proxying
    rewrite ^/code-quality-agent/(.*) /$1 break;
    rewrite ^/code-quality-agent$ / break;
    
    # Proxy to the Docker container
    proxy_pass http://localhost:3000;
    
    # Preserve original request information
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Port $server_port;
    
    # WebSocket support (if needed)
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    
    # Timeouts for file uploads and processing
    proxy_connect_timeout 60s;
    proxy_send_timeout 300s;
    proxy_read_timeout 300s;
    
    # Buffer settings for large responses
    proxy_buffering on;
    proxy_buffer_size 4k;
    proxy_buffers 8 4k;
    proxy_busy_buffers_size 8k;
    
    # Max upload size (adjust as needed)
    client_max_body_size 50M;
}

# Serve static reports directly
location /code-quality-agent/reports {
    rewrite ^/code-quality-agent/reports/(.*) /reports/$1 break;
    proxy_pass http://localhost:3000;
    proxy_set_header Host $host;
    
    # Cache static reports
    proxy_cache_valid 200 1h;
    add_header Cache-Control "public, max-age=3600";
}
